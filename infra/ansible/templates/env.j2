APP_NAME="{{ app_name | default('Rumah Integritas') }}"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://{{ server_name }}

LOG_CHANNEL=stack
LOG_LEVEL=info

# DB (adjust to your DB)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION={{ queue_conn }}

# Vite
VITE_APP_NAME="{{ app_name | default('Rumah Integritas') }}"

# Broadcasting driver
BROADCAST_CONNECTION={{ broadcast_connection | default('reverb') }}

REVERB_APP_ID={{ reverb_app_id | default('app-1') }}
REVERB_APP_KEY={{ reverb_app_key | default('your-key') }}
REVERB_APP_SECRET={{ reverb_app_secret | default('your-secret') }}

REVERB_HOST={{ reverb_host }}
REVERB_PORT={{ reverb_port }}
REVERB_SCHEME=http
REVERB_SERVER_LOG=/storage/logs/reverb.log

# Frontend (Vite) Reverb config (public browser connection)
# Leave HOST/PORT/SCHEME empty to auto-detect from window.location
VITE_REVERB_APP_KEY={{ reverb_app_key | default('your-key') }}
VITE_REVERB_HOST=
VITE_REVERB_PORT=
VITE_REVERB_SCHEME=
# Leave VITE_REVERB_PATH unset so Echo uses its default

# If you use Laravel Echo with Pusher driver:
# PUSHER_APP_ID=${REVERB_APP_ID}
# PUSHER_APP_KEY=${REVERB_APP_KEY}
# PUSHER_APP_SECRET=${REVERB_APP_SECRET}
# PUSHER_HOST={{ server_name }}
# PUSHER_PORT=80
# PUSHER_SCHEME=http
