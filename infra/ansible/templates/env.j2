APP_NAME=Laravel
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://{{ server_name }}

LOG_CHANNEL=stack
LOG_LEVEL=info

# DB (adjust to your DB)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION={{ queue_conn }}

# Broadcasting via Reverb
BROADCAST_CONNECTION=reverb

REVERB_APP_ID=app-1
REVERB_APP_KEY=your-key
REVERB_APP_SECRET=your-secret

REVERB_HOST={{ reverb_host }}
REVERB_PORT={{ reverb_port }}
REVERB_SCHEME=http
REVERB_SERVER_LOG=/storage/logs/reverb.log

# If you use Laravel Echo with Pusher driver:
# PUSHER_APP_ID=${REVERB_APP_ID}
# PUSHER_APP_KEY=${REVERB_APP_KEY}
# PUSHER_APP_SECRET=${REVERB_APP_SECRET}
# PUSHER_HOST={{ server_name }}
# PUSHER_PORT=80
# PUSHER_SCHEME=http